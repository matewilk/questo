{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "pretty": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}
